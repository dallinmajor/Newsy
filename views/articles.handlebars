<div class="container">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4 text-center">Get Your News Yo!!</h1>
        </div>
    </div>
    {{#each article}}
    <div class="card articles">
        <h3 class="card-header text-center">{{headline}}</h3>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-2">
                    <img src="{{image}}" alt="" style="width: 100%">
                </div>
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="text-4-card">{{summary}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{URL}}">Full Article</a>
                        </div>
                    </div>
                </div>
            </div>
            <div id="{{_id}}" class="container">
                <div class="hold-comment-input comment">
                    <form>
                        <div class="form-group">
                            <label for="addAComment">
                                <h6>Add Comment</h6>
                            </label>
                            <textarea class="form-control" id="addAComment_{{_id}}" rows="1"></textarea>
                        </div>
                        <button id="addBtn" type="button" class="btn btn-primary" data-article-button={{_id}}>Submit</button>
                    </form>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" id="ViewComments" data-comment-ids={{comments}} data-article-id={{_id}}>View Comments</button>
                </div>
                <div id="comments_box_{{_id}}"></div>
            </div>
        </div>
    </div>
    {{/each}}
</div>